extends ../layout

block script
  script(type='text/javascript',data-main='/coop/javascripts/apps/NewUserPage',src='/coop/javascripts/require.js')


block templates
  script(type='text/template',id="new-user-view")
    h2 Create a new Account for JP Babysitting Co-Op

    p Enter an email and password and verify the password.  

    table
      tbody
        tr
          td
            label Email: 
          td
            input(type='text',name='temail')
        tr
          td
            label password:
          td
            input(type='password',name='tpassword')
        tr
          td
            label retype password:
          td
            input(type='password',name='tverify')
        tr
          td
          td   
            button.btn(id='submit') Submit
        tr
          td
            a(href="/coop/forgot") I forgot my password
    form(id='newUser',action='/coop/users/add',method='post')
      input(type='hidden',name='email');
      input(type='hidden',name='password')
      input(type='hidden',name='role');
